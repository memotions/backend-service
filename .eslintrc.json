{
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "overrides": [
        {
            "files": [
                "*.js",
                "*.ts"
            ],
            "excludedFiles": [
                "node_modules/**",
                "dist/**"
            ]
        }
    ],
    "rules": {
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never",
                "ts": "never"
            }
        ]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".ts"
                ],
                "moduleDirectory": [
                    "node_modules",
                    "src"
                ]
            }
        }
    }
}